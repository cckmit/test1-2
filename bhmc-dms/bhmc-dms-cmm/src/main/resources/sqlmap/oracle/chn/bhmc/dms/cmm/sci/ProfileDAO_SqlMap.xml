<mapper namespace="chn.bhmc.dms.cmm.sci.service.dao.ProfileDAO">

    <!-- 시스템 설정 정보를 조회한다. -->
    <select id="selectAliveCheckListByCondition" parameterType="ProfileSearchVO" resultType="ProfileVO">
        /* [chn.bhmc.dms.cmm.sci.service.dao.ProfileDAO.selectAliveCheckByCondition] */
        SELECT * FROM (
            SELECT ROWNUM AS RNUM, T1.* FROM (
                SELECT * FROM SA_0801T
                <where>
                    <if test='sFromDt !=null'>
                        AND REG_DT <![CDATA[>=]]> #{sFromDt}
                    </if>
                    <if test='sToDt !=null'>
                        AND REG_DT <![CDATA[<]]> #{sToDt}+1
                    </if>
                </where>
                ORDER BY REG_DT DESC
            ) T1
            <where>
                <if test='firstIndex != -1 and lastIndex != -1'>
                    ROWNUM <![CDATA[<=]]> #{lastIndex}
                </if>
            </where>
        )
        <where>
            <if test='firstIndex != -1 and lastIndex != -1'>
                RNUM > #{firstIndex}
            </if>
        </where>
    </select>

    <!-- 시스템 설정 정보를 조회한다. -->
    <select id="selectAliveCheckListByConditionCnt" parameterType="ProfileSearchVO" resultType="int">
        /* [chn.bhmc.dms.cmm.sci.service.dao.ProfileDAO.selectAliveCheckByConditionCnt] */
        SELECT count(*)
        FROM SA_0801T
        <where>
            <if test='sFromDt !=null'>
                AND REG_DT <![CDATA[>=]]> #{sFromDt}
            </if>
            <if test='sToDt !=null'>
                AND REG_DT <![CDATA[<]]> #{sToDt}+1
            </if>
        </where>
    </select>

    <!-- insert -->
    <insert id="pingSearch" parameterType="ProfileVO">
        INSERT INTO SA_0801T
        (
            TIMESTAMP
          , IP_NM
          , CONT_YN
          , REG_USR_ID
          , REG_DT
        )VALUES(
           SYSTIMESTAMP
          , #{ipNm}
          , #{contYn}
          , 'DNS_BATCH'
          , SYSDATE
        )
    </insert>

</mapper>